root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false


; depsite the the preferred tab indentention of the laraval coding style
; (PSR-01 and PSR-1) the generated files from artisan templates are all
; indented with 4 spaces, so we follow this here to not mix this up
[*.php]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
